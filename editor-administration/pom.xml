	<profiles>
		<profile>
			<id>default-filter</id>
			<activation>
				<property>
					<name>!env</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/../src/main/filters/default.properties
					</filter>
				</filters>
			</build>
		</profile>

		<profile>
