					<!-- Pack war file -->
					<plugin>
						<artifactId>maven-war-plugin</artifactId>
						<configuration>
							<warName>${warName}</warName>
							<outputDirectory>${basedir}/../target</outputDirectory>
							<archive>
								<manifest>
									<addDefaultSpecificationEntries>true
							</addDefaultSpecificationEntries>
									<addDefaultImplementationEntries>true
							</addDefaultImplementationEntries>
								</manifest>
								<manifestEntries>
									<Build-Number>${buildNumber}</Build-Number>
								</manifestEntries>
							</archive>
							<webResources>
								<resource>
									<directory>${basedir}/src/main/administration</directory>
									<filtering>true</filtering>
								</resource>
								<resource>
									<directory>${basedir}/../editor-webapp/src/main/webapp</directory>
									<filtering>true</filtering>
									<includes>
										<include>login.html</include>
										<include>viewer/viewer.html</include>
										<include>MEditor.css</include>
										<include>MEditor.html</include>
									</includes>
								</resource>
							</webResources>
							<webXml>${basedir}/src/main/administration/WEB-INF/web.xml</webXml>
						</configuration>
					</plugin>
