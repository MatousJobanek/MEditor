				<plugins>
					<!-- Compile -->
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-compiler-plugin</artifactId>
					</plugin>

					<!-- Compile GWT modules -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>gwt-maven-plugin</artifactId>
						<configuration>
							<noServer>true</noServer>
							<inplace>false</inplace>
							<logLevel>INFO</logLevel>
							<runTarget>${coreGuiRunTarget}</runTarget>
							<draftCompile>false</draftCompile>
							<soyc>true</soyc>
							<buildOutputDirectory>target/gwtclasses</buildOutputDirectory>
							<hostedWebapp>target/hostedWar</hostedWebapp>
							<debugSuspend>false</debugSuspend>
							<style>OBF</style>
							<strict>true</strict>
							<draftCompile>true</draftCompile>
						</configuration>
						<executions>
							<execution>
								<configuration>
									<modules>
										<module>cz.mzk.editor.Administration</module>
										<module>cz.mzk.editor.MEditor</module>
										<module>cz.mzk.editor.RequestForAdding</module>
									</modules>
								</configuration>
								<id>gwt-goals</id>
								<goals>
									<goal>compile</goal>
								</goals>
							</execution>
							<execution>
								<id>default-cli</id>
								<goals>
									<goal>debug</goal>
								</goals>
								<configuration>
									<module>cz.mzk.editor.Administration</module>
									<module>cz.mzk.editor.MEditor</module>
								</configuration>
							</execution>
						</executions>
					</plugin>

